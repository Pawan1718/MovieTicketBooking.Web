@model MovieTicketBooking.Web.ViewModels.ShowtimeViewModels.AddShowtimeViewModel

@{
    ViewData["Title"] = "AddShowtime";
}
<br />
<h1 class="mt-5">Add Showtime</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddShowtime">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="MovieId" class="form-label">Movie</label>
                <select asp-for="MovieId" class="form-select" asp-items="@ViewBag.MovieList">
                    <option value="" disabled selected>-- Select Movie --</option>
                </select>
                <span asp-validation-for="MovieId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TheaterId" class="form-label">Theater</label>
                <select asp-for="TheaterId" class="form-select" asp-items="@ViewBag.TheaterList">
                    <option value="" disabled selected>-- Select Theater --</option>
                </select>
                <span asp-validation-for="TheaterId" class="text-danger"></span>
            </div>
            <div class="row g-3">
                <div class="col">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="DateTime" class="form-label">Show Time</label>
                    <input asp-for="DateTime" class="form-control" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-outline-primary">Save</button>
                <a asp-action="Showtime" class="btn btn-outline-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
